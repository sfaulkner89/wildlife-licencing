{% extends "standard-form.njk" %}
{% from "input/macro.njk" import govukInput %}

{% set title = 'Sign in' %}

{% set errorMap = {
        'user-id': {
            'string.empty': { ref: '#user-id', text: 'Enter your email address' },
            'string.email': { ref: '#user-id', text: 'You did not enter a valid email address' },
            'unauthorized': { ref: '#user-id', text: 'Your email address has not been found' }
        }
    }
%}

{% block pageContent %}
    {{ govukInput({
      label: {
        text: 'Email address'
      },
      hint: {
        text: "The email address that you used to register with the service, for instance jon.doe@email.com"
      },
      id: "user-id",
      name: "user-id",
      type: "email",
      autocomplete: "email",
      spellcheck: false,
      value: payload['user-id'],
      classes: "govuk-input--width-20",
      attributes: { maxlength: 30 },
      errorMessage: { text: 'Enter your email address' } if error['user-id']
    }) }}

    <a href="{{ _uri.register }}" class="govuk-link">Register</a>
{% endblock %}
