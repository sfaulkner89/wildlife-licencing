{% from "govuk/components/tag/macro.njk" import govukTag %}

{% extends "./common/layout.njk" %}
{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
            Sign in using Government Gateway
        </h1>

    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST">

        <div class="govuk-form-group ">
          <fieldset class="govuk-fieldset">

            <div class="govuk-form-group">
              <label class="govuk-label" for="govGateUserId">
                        Government Gateway user ID
                    </label>
              <div class="govuk-hint">
                        This could be up to 12 characters.
                    </div>
              <input class="govuk-input govuk-!-width-one-half" id="govGateUserId" name="govGateUserId" type="text">
            </div>

            <div class="govuk-form-group">
              <label class="govuk-label" for="govGatePwassword">
                        Password
                    </label>
              <input class="govuk-input govuk-!-width-three-quarters" id="govGatePwassword" name="govGatePwassword" type="password">
            </div>

          </fieldset>

        </div>

        <button class="govuk-button" data-module="govuk-button">
  Sign in
</button>

      </form>

    </div>
  </div>

{% endblock %}